    "prettier": "^2.6.2"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.1",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0"
  },
  "lint-staged": {
